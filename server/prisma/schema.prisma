datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  createdAt DateTime
}

model Lobby {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Board     Board?
  Player    Player[]
}

model Player {
  id          Int      @id @default(autoincrement())
  lobbyId     Int
  lobby       Lobby    @relation(fields: [lobbyId], references: [id])
  userId      String   @unique
  displayName String
  color       Int
  createdAt   DateTime @default(now())
  boardId     Int
  board       Board    @relation(fields: [boardId], references: [id])
  score       Int      @default(0)
}

model Board {
  id                Int      @id @default(autoincrement())
  lobbyId           Int      @unique
  lobby             Lobby    @relation(fields: [lobbyId], references: [id])
  boardData         Json
  latestMove        Json?
  isGameEnd         Boolean  @default(false)
  currentTurnUserId String?
  playerList        Player[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
