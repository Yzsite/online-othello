datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  createdAt DateTime
}

model Board {
  id                String   @id
  lobbyName         String?
  boardData         Json
  latestMove        Json?
  isGameEnd         Boolean  @default(false)
  currentTurnUserId String
  playerList        Player[]
  createdAt         DateTime @default(now())
}

model Player {
  userId  String
  lobbyId String
  lobby   Board     @relation(fields: [lobbyId], references: [id])
  in      DateTime  @default(now())
  out     DateTime?
  color   Int
  score   Int       @default(0)

  @@id([userId, lobbyId])
}
